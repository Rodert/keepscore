/* pages/records/records.wxss */
.header {
  padding: 20px;
  text-align: center;
}

.title {
  font-size: 20px;
  font-weight: bold;
}

.tabs {
  display: flex;
  width: 100%;
  background-color: #fff;
  border-bottom: 1px solid #f0f0f0;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 12px 0;
  font-size: 14px;
  color: #666;
  position: relative;
}

.tab.active {
  color: #4CAF50;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 3px;
  background-color: #4CAF50;
  border-radius: 3px;
}

.filter-actions {
  display: flex;
  justify-content: flex-end;
  padding: 10px 15px;
  background-color: #fff;
  border-bottom: 1px solid #f0f0f0;
}

.filter-btn, .delete-btn {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #666;
  margin-left: 15px;
}

.filter-icon, .delete-icon {
  width: 16px;
  height: 16px;
  margin-right: 5px;
}

.records-list {
  width: 100%;
}

.record-item {
  background-color: #fff;
  padding: 15px;
  margin-bottom: 10px;
  border-bottom: 1px solid #f0f0f0;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.record-title {
  font-size: 16px;
  font-weight: bold;
}

.status-tag {
  font-size: 12px;
  padding: 2px 8px;
  border-radius: 10px;
}

.status-active {
  background-color: #e8f5e9;
  color: #4CAF50;
}

.status-completed {
  background-color: #f5f5f5;
  color: #999;
}

.record-info {
  display: flex;
  font-size: 12px;
  color: #999;
  margin-bottom: 10px;
}

.record-date {
  margin-right: 10px;
}

.record-players {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10px;
  padding-top: 10px;
  border-top: 1px dashed #f0f0f0;
}

.player {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20px;
  margin-bottom: 5px;
}

.player-name {
  font-size: 12px;
  color: #666;
  margin-bottom: 3px;
}

.player-score {
  font-size: 16px;
  font-weight: bold;
}

.positive {
  color: #4CAF50;
}

.negative {
  color: #F44336;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 50px 0;
  color: #999;
}

.empty-state image {
  width: 80px;
  height: 80px;
  margin-bottom: 15px;
  opacity: 0.5;
}

.empty-text {
  font-size: 14px;
  color: #999;
}