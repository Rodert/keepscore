/* pages/game/setup/setup.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.header {
  display: flex;
  align-items: center;
  padding: 15px;
  background-color: transparent;
  position: relative;
}

.back-btn {
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.back-icon {
  width: 18px;
  height: 18px;
}

.title {
  font-size: 18px;
  font-weight: bold;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  color: #333;
}

.welcome-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px 0 30px;
  background: linear-gradient(to bottom, #4CAF50, #45a049);
  color: white;
  border-radius: 0 0 30px 30px;
  margin-bottom: 20px;
  box-shadow: 0 4px 10px rgba(76, 175, 80, 0.2);
}

.logo {
  width: 90px;
  height: 90px;
  border-radius: 50%;
  border: 3px solid white;
  margin-bottom: 15px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  background-color: white;
}

.welcome-title {
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 5px;
}

.app-name {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 10px;
}

.welcome-subtitle {
  font-size: 14px;
  opacity: 0.9;
}

.form-section {
  padding: 0 20px 20px;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.form-card {
  background-color: white;
  border-radius: 15px;
  padding: 20px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
  margin-bottom: 20px;
}

.form-item {
  margin-bottom: 25px;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 15px;
  color: #333;
  margin-bottom: 12px;
  font-weight: 500;
}

.required {
  color: #ff4d4f;
  margin-left: 4px;
}

.avatar-selector {
  display: flex;
  align-items: center;
}

.current-avatar {
  width: 70px;
  height: 70px;
  border-radius: 15px;
  margin-right: 20px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

.select-avatar-btn {
  background-color: #f5f5f5;
  color: #333;
  font-size: 14px;
  padding: 0;
  height: 40px;
  line-height: 40px;
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
  border: none;
}

.btn-text {
  margin: 0 20px;
}

.form-input {
  background-color: #f5f5f5;
  border-radius: 10px;
  padding: 12px 15px;
  font-size: 15px;
  box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.05);
  border: 1px solid transparent;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #4CAF50;
  box-shadow: 0 0 0 2px rgba(76, 175, 80, 0.2);
}

.register-btn {
  background: linear-gradient(to right, #4CAF50, #45a049);
  color: white;
  font-size: 16px;
  font-weight: bold;
  padding: 0 15px;
  height: 50px;
  line-height: 50px;
  border-radius: 25px;
  margin: 10px 0 20px;
  width: 100%;
  box-shadow: 0 4px 10px rgba(76, 175, 80, 0.3);
  border: none;
  transition: all 0.3s ease;
}

.register-btn:active {
  transform: translateY(2px);
  box-shadow: 0 2px 5px rgba(76, 175, 80, 0.3);
}

.register-btn.disabled {
  background: linear-gradient(to right, #a5d6a7, #81c784);
  opacity: 0.7;
}

.agreement {
  display: flex;
  align-items: flex-start;
  font-size: 13px;
  color: #666;
  padding: 0 5px;
}

.checkbox-container {
  margin-right: 10px;
  padding-top: 2px;
}

.custom-checkbox {
  width: 18px;
  height: 18px;
  border-radius: 4px;
  border: 1px solid #d9d9d9;
  position: relative;
  transition: all 0.2s;
}

.custom-checkbox.checked {
  background-color: #4CAF50;
  border-color: #4CAF50;
}

.custom-checkbox.checked::after {
  content: '';
  position: absolute;
  width: 5px;
  height: 10px;
  border: 2px solid white;
  border-top: 0;
  border-left: 0;
  transform: rotate(45deg);
  top: 1px;
  left: 6px;
}

.agreement-text {
  flex: 1;
  line-height: 1.5;
}

.link {
  color: #4CAF50;
  font-weight: 500;
}
