/* pages/game/multi/multi.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
}

.header {
  padding: 20px;
  text-align: center;
}

.title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 5px;
}

.subtitle {
  font-size: 14px;
  color: #666;
}

.settings-section {
  flex: 1;
  padding: 0 15px;
  overflow-y: auto;
}

.setting-card {
  background-color: #fff;
  border-radius: 10px;
  padding: 15px;
  margin-bottom: 15px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
}

.setting-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 15px;
  color: #4CAF50;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid #f5f5f5;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 14px;
  color: #333;
}

.setting-control {
  display: flex;
  align-items: center;
}

.number-control {
  display: flex;
  align-items: center;
  border: 1px solid #e0e0e0;
  border-radius: 5px;
  overflow: hidden;
}

.control-btn {
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  font-size: 18px;
  font-weight: bold;
}

.control-btn.disabled {
  color: #ccc;
}

.control-value {
  width: 40px;
  text-align: center;
  font-size: 16px;
}

.setting-input {
  width: 100px;
  background-color: #f5f5f5;
  border-radius: 5px;
  padding: 8px 10px;
  text-align: center;
}

.unit-picker {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 5px;
  padding: 8px 15px;
}

.dropdown-icon {
  width: 12px;
  height: 12px;
  margin-left: 5px;
}

.player-list {
  margin-top: 10px;
}

.player-item {
  display: flex;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid #f5f5f5;
}

.player-item:last-child {
  border-bottom: none;
}

.player-number {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  background-color: #4CAF50;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  margin-right: 10px;
}

.player-info {
  flex: 1;
}

.player-name-input {
  background-color: #f5f5f5;
  border-radius: 5px;
  padding: 8px 10px;
  font-size: 14px;
  width: 100%;
}

.player-actions {
  margin-left: 10px;
}

.delete-btn {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  background-color: #f44336;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
}

.add-player-btn {
  display: flex;
  align-items: center;
  padding: 10px 0;
  color: #4CAF50;
}

.add-icon {
  font-size: 18px;
  margin-right: 5px;
}

.add-text {
  font-size: 14px;
}

.action-buttons {
  display: flex;
  padding: 15px;
}

.cancel-btn, .start-btn {
  flex: 1;
  height: 45px;
  line-height: 45px;
  text-align: center;
  border-radius: 5px;
  font-size: 16px;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
  margin-right: 10px;
}

.start-btn {
  background-color: #4CAF50;
  color: white;
}
