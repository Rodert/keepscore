/**index.wxss**/
.header {
  padding: 20px;
  text-align: center;
}

.title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 5px;
}

.subtitle {
  font-size: 16px;
  color: #4CAF50;
  font-weight: bold;
  position: relative;
  display: inline-block;
  margin-top: 10px;
}

.subtitle::after {
  content: '';
  position: absolute;
  bottom: -5px;
  left: 0;
  width: 100%;
  height: 2px;
  background-color: #4CAF50;
}

.game-modes {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 0 15px;
}

.game-mode-card {
  background-color: #fff;
  border-radius: 8px;
  padding: 15px;
  padding-top: 25px; /* 增加顶部内边距，为标签留出空间 */
  margin-bottom: 15px;
  position: relative;
  display: flex;
  flex-direction: column;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.tag {
  position: absolute;
  top: 0;
  left: 0;
  background-color: #FFD700;
  color: #333;
  padding: 2px 8px;
  border-radius: 0 0 8px 0; /* 右下圆角 */
  font-size: 12px;
  z-index: 1; /* 确保标签在上层 */
}

.mode-content {
  padding-right: 50px; /* 为右侧图标留出空间 */
}

.mode-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
  margin-top: 5px; /* 调整顶部边距 */
}

.mode-desc {
  font-size: 12px;
  color: #999;
}

.mode-icon {
  position: absolute;
  right: 15px;
  top: 50%;
  transform: translateY(-50%);
  width: 40px;
  height: 40px;
  opacity: 0.7;
}

.recent-games {
  width: 100%;
  padding: 0 15px;
  margin-top: 10px;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
  padding-left: 5px;
}

.recent-game-list {
  background-color: #fff;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.recent-game-item {
  padding: 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f0f0f0;
}

.recent-game-item:last-child {
  border-bottom: none;
}

.game-title {
  font-weight: bold;
  margin-bottom: 5px;
}

.game-date {
  font-size: 12px;
  color: #999;
}

.status-tag {
  font-size: 12px;
  padding: 2px 8px;
  border-radius: 10px;
}

.status-active {
  background-color: #e8f5e9;
  color: #4CAF50;
}

.status-completed {
  background-color: #f5f5f5;
  color: #999;
}
